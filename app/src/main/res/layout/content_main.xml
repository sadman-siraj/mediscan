<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efeadd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="oriongladiators.mediscan.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="495dp"
        android:columnCount="2"
        android:padding="10dp"
        android:rowCount="2"
        android:background="#efeadd"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:padding="5dp"
            card_view:cardBackgroundColor="@color/colorCardOne"
            card_view:cardElevation="7dp"
            card_view:cardCornerRadius="4dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:filterTouchesWhenObscured="true"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/cardone" />

                <TextView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:text="Scan Your Medicine"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/white"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_gravity="right"
            card_view:cardBackgroundColor="@color/colorCardTwo"
            card_view:cardElevation="7dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:filterTouchesWhenObscured="true"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/cardtwo" />

            <TextView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Information"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@android:color/white"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            card_view:cardBackgroundColor="@color/colorCardThree"
            card_view:cardElevation="7dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:filterTouchesWhenObscured="true"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/cardthree" />

                <TextView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:text="Health Manager"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/white"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"
            card_view:cardBackgroundColor="@color/colorCardFour"
            card_view:cardElevation="7dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:filterTouchesWhenObscured="true"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingTop="13dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/cardfour" />

                <TextView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:text="Report To Authorities"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/white"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </GridLayout>

</android.support.constraint.ConstraintLayout>
